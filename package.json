{
  "name": "hl1",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && npm run build:js",
    "preview": "vite preview",
    "build:web": "vite build",
    "build:autoprefix": "postcss src/HL1.css --use autoprefixer --no-map -o HL1/HL1.prefixed.css",
    "build:pxtorem": "postcss HL1/HL1.prefixed.css --use postcss-pxtorem --no-map -o HL1/HL1.css",
    "build:cleancss": "postcss HL1/HL1.css --use cssnano --no-map -o HL1/HL1.min.css",
    "build:css": "npm run build:autoprefix && npm run build:pxtorem && npm run build:cleancss",
    "build:js": "esbuild src/main.js --bundle --minify --sourcemap --outfile=HL1/main.min.js",
    "build:mincss": "postcss src/HL1.css --use cssnano --no-map -o HL1/HL1.min.css"
  },
  "devDependencies": {
    "vite": "^7.2.4"
  },
  "dependencies": {
    "autoprefixer": "^10.4.22",
    "cssnano": "^7.1.2",
    "postcss-cli": "^11.0.1",
    "postcss-pxtorem": "^6.1.0",
    "esbuild": "^0.17.19"
  }
}
